<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacionFamiliar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="70dp"
                        android:text="Información del Familiar"
                        android:gravity="center"
                        android:textSize="28sp"
                        />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/imageView"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="100dp"
                        android:background="@drawable/inicio"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="30dp">


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Número de Registro:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtidfamiliar"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="ID:"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="NOMBRE:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtnombre"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Nombre:"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittextrounded">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="APELLIDO PATERNO:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtapaterno"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginBottom="10dp"
                        android:text="APELLIDO PATERNO:"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="APELLIDO MATERNO:"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/txtamaterno"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="APELLIDO MATERNO:"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="CORREO ELECTRÓNICO:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txcorreo"
                        android:layout_width="188dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="left"
                        android:text="Correo:"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="FECHA DE NACIMIENTO:"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtfecha"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="FECHA DE NACIMIENTO:"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="MUNICIPIO:"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/txtmunicipio"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Municipio:"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextrounded"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="TÉLEFONO:"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/txtelefono"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Telefono:"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="20sp"/>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>

</RelativeLayout>